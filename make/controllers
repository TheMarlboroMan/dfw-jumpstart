DIR_CONTROLLERS=./class/controllers/

DEP_CONTROLLERS=\
$(DIR_O)controller_menu.o \
$(DIR_O)controller_test_2d.o \
$(DIR_O)controller_test_2d_text.o \
$(DIR_O)controller_test_poly.o \
$(DIR_O)controller_console.o \
$(DIR_O)controller_test_fps.o \
$(DIR_O)controller_step.o \
#ENDCONTROLLERLIST

################################################################################
#Controllers...

$(DIR_O)controller_menu.o :\
$(DIR_CONTROLLERS)menu.h \
$(DIR_CONTROLLERS)menu.cpp
	$(CC) $(CFLAGS) $(INCLUDES) $(DIR_CONTROLLERS)menu.cpp -o $(DIR_O)controller_menu.o

$(DIR_O)controller_test_poly.o :\
$(DIR_CONTROLLERS)test_poly.h \
$(DIR_CONTROLLERS)test_poly.cpp
	$(CC) $(CFLAGS) $(INCLUDES) $(DIR_CONTROLLERS)test_poly.cpp -o $(DIR_O)controller_test_poly.o

