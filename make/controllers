$(DIR_CONTROLLERS)test_2d.h \
$(DIR_CONTROLLERS)test_2d.cpp
	$(CC) $(CFLAGS) $(INCLUDES) $(DIR_CONTROLLERS)test_2d.cpp -o $(DIR_O)controller_test_2d.o

$(DIR_O)controller_test_2d_text.o :\
$(DIR_CONTROLLERS)test_2d_text.h \
$(DIR_CONTROLLERS)test_2d_text.cpp
	$(CC) $(CFLAGS) $(INCLUDES) $(DIR_CONTROLLERS)test_2d_text.cpp -o $(DIR_O)controller_test_2d_text.o

$(DIR_O)controller_console.o :\
$(DIR_CONTROLLERS)console.h \
$(DIR_CONTROLLERS)console.cpp
	$(CC) $(CFLAGS) $(INCLUDES) $(DIR_CONTROLLERS)console.cpp -o $(DIR_O)controller_console.o

