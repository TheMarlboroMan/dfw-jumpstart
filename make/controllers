$(DIR_CONTROLLERS)step.h \
$(DIR_CONTROLLERS)step.cpp
	$(CC) $(CFLAGS) $(INCLUDES) $(DIR_CONTROLLERS)step.cpp -o $(DIR_O)controller_step.o

